    "@actions/core": "^1.2.7"
  },
  "devDependencies": {
    "@nishans/types": "^0.0.35",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",

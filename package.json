{
  "name": "github-action-name",
  "version": "1.0.0",
  "description": "A github action to do this and that",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run format && npm run transpile",
    "build": "npx ncc build ./src/index.ts -o dist -t",
    "format": "npx prettier --write src/**/*.ts",
    "transpile": "npx tsc",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/[username]/[repository]"
  },
  "keywords": [],
  "author": "[author_name] <[email]>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/[username]/[repository]/issues"
  },
  "homepage": "https://github.com/[username]/[repository]#readme",
  "dependencies": {
    "@actions/core": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.0",
    "@vercel/ncc": "^0.29.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  }
}
